<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="5dp"
    android:layout_marginHorizontal="5dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/rectangle_no_right_cornes_bkg"
            android:paddingHorizontal="8dp"
            android:paddingVertical="5dp"
            >
            <TextView
                android:id="@+id/textViewPosizione"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="1"
                android:textSize="@dimen/size_text_orario_appuntamento"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_gravity="center"
                android:gravity="center"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="1dp"
            android:background="@drawable/rectangle_no_left_corners_bkg"
            android:paddingHorizontal="16dp"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/imageViewPaziente"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/circle_shape"
                android:clipToOutline="true"
                android:scaleType="fitCenter"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textViewUsernameGiocatore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="shiningraro_sus"
                android:textColor="@color/white"
                android:textSize="@dimen/subHeaderTextSize"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                >
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_experience_points"
                    />
                <TextView
                    android:id="@+id/textViewPunteggio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textStyle="italic"
                    android:text="25000"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="15sp"
                    />
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>