<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPazienteInAppuntamentiLogopedista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp"
    >
    <LinearLayout
        android:id="@+id/llPazienteInAppuntamentiLogopedistaPrincipale"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rectangle_rounded_border_bkg"
        android:weightSum="5"
        android:padding="16dp"
        android:elevation="2dp"
        >
        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="10"
            android:layout_weight="3"
            >
            <TextView
                android:id="@+id/textViewNomePaziente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:textSize="@dimen/size_text_info_paziente"
                android:text="Nomelungo"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="2"
                />
            <TextView
                android:id="@+id/textViewCognomePaziente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="8dp"
                android:textSize="@dimen/size_text_info_paziente"
                android:text="Cognomelungo"
                android:clickable="true"
                android:focusable="true"
                android:layout_weight="2"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/textViewDataNascitaPaziente"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:textSize="@dimen/size_text_info_paziente"
            android:text="9 febbraio"
            android:gravity="center"
            android:paddingHorizontal="5dp"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="2"
            />

        <TextView
            android:id="@+id/textViewOrarioAppuntamentoLogopedista"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            android:textSize="@dimen/size_text_info_paziente"
            android:text="00:00"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llPazienteInAppuntamentiLogopedistaInfoAggiuntive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="5dp"
        android:layout_marginHorizontal="9dp"
        android:background="@drawable/rectangle_bottom_border_rounded_background"
        android:elevation="1dp"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1"
            >
        <TextView
            android:id="@+id/textViewNotePaziente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Luogo"
            android:paddingHorizontal="5dp"
            />
        <TextView
            android:id="@+id/textViewLuogoAppuntamentoLogopedista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Via dalle palle sudate, che dal signore sono scivolate 69"
            android:layout_weight="1"
            android:paddingHorizontal="5dp"
            />
    </LinearLayout>
        <android.widget.Button
            android:id="@+id/buttonRimuoviAppuntamentoLogopedista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:background="@color/red"
            android:text="@string/rimuovi_appuntamento"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:paddingHorizontal="25dp"
            android:layout_marginVertical="5dp"
            android:clickable="true"
            />
    </LinearLayout>
</LinearLayout>