<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="25dp"
    android:background="@color/black"
    >
    <TextView
        android:id="@+id/textViewNumeroEsercizio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1Â°"
        android:layout_marginEnd="10dp"
        android:textColor="@color/white"
        android:textSize="@dimen/subHeaderTextSize"
        />
    <TextView
        android:id="@+id/textViewTipoEsercizio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Denominazione immagine"
        android:textColor="@color/white"
        android:textSize="@dimen/size_text_info_scenario"
        android:layout_marginEnd="10dp"
        />
    <ImageView
        android:id="@+id/imageViewCheckEsercizio"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_check"
        android:layout_gravity="center"
        />
    <ImageView
        android:id="@+id/imageViewWrongEsercizio"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_wrong"
        android:layout_gravity="center"
        />
</LinearLayout>
