<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAvvioRapido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.fragment.autenticazione.AvvioRapidoFragment"
    android:background="@color/backgroundWhite"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="344dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_paziente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/patient"
            >
        </Button>

        <Button
            android:id="@+id/button_genitore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/parent"
            >
        </Button>

        <Button
            android:id="@+id/button_logopedista"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/logopedist"
            >
        </Button>

        <Button
            android:id="@+id/testPortaleTestButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text="TEST"
            >
        </Button>

    </LinearLayout>

</FrameLayout>