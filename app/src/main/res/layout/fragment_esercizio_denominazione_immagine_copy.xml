<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_montagne"
    >
    <!-- Aggiungi una View per l'overlay semitrasparente -->
    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewImmagineEsercizioDenominazione"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_gravity="center"
        android:layout_marginTop="52dp"
        app:cardCornerRadius="16dp"
        android:elevation="10dp"
        android:backgroundTint="@color/corniceDenominazioneImmagine"
        app:cardUseCompatPadding="true"
        >
        <ImageView
            android:id="@+id/imageViewImmagineEsercizioDenominazione"
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:src="@drawable/test_imageview"
            android:scaleType="centerCrop"
            />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textViewEsercizioMicSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="15dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:text="@string/suggestEsercizioDenominazione"
        app:layout_constraintTop_toBottomOf="@+id/cardViewImmagineEsercizioDenominazione"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:background="#61000000"
        />


    <ImageView
        android:id="@+id/buttonAiuti"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="30dp"
        android:layout_weight="1"
        android:contentDescription="@string/suggestEsercizioDenominazione"
        android:src="@drawable/ic_suggestion"
        android:tooltipText="@string/suggestEsercizioDenominazione"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:elevation="10dp"
        />

    <ImageView
        android:id="@+id/buttonAvviaRegistrazione"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/circle_button_mic_background"
        android:padding="20dp"
        android:src="@drawable/ic_mic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonCompletaEsercizio"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toEndOf="@+id/buttonAiuti"
        app:layout_constraintTop_toBottomOf="@+id/textViewEsercizioMicSuggestion"
        app:layout_constraintVertical_bias="0.243"
        android:elevation="10dp"
        />

    <ImageView
            android:id="@+id/buttonCompletaEsercizio"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@string/CheckAnswer"
            android:src="@drawable/ic_check"
            android:tooltipText="@string/CheckAnswer"
            android:layout_weight="1"
            android:layout_gravity="bottom"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"
            android:elevation="10dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>