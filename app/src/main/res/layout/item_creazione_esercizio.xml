<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginHorizontal="10dp"
        >
        <!-- Title esercizio -->
        <LinearLayout
            android:paddingVertical="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:orientation="horizontal"
            android:background="?attr/selectableItemBackground"
            android:paddingHorizontal="10dp"
            >
            <TextView
                android:id="@+id/textViewTitleEsercizio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/esercizio"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />
            <ImageView
                android:id="@+id/imageViewArrowDown"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_down"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <!-- Addiungi Esercizio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SCEGLI TIPO ESERCIZIO -->
            <LinearLayout
                android:id="@+id/linearLayoutTipoEsercizio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/subHeaderTextSize"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="Che tipo di esercizio vuoi inserire?"
                    android:layout_marginVertical="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/buttonEsercizioDenominazioneImmagine"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/denominazione_immagine"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/buttonEsercizioSequenzaParole"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sequenza_parole"
                        android:layout_weight="1"/>

                    <Button
                        android:id="@+id/buttonEsercizioCoppiaImmagini"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/coppiaImmagini"
                        android:layout_weight="1"/>
                </LinearLayout>
            </LinearLayout>

            <!-- SCELGI TEMPLATE O CREA NUOVO ESERCIZIO -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/buttonTemplateEsercizio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/usa_un_template"
                    android:layout_weight="1"
                    />
                <Button
                    android:id="@+id/buttonCreaEsercizio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/crealo_dall_inizio"
                    android:layout_weight="1"
                    />

            </LinearLayout>

            <!--Template-->
            <LinearLayout
                android:id="@+id/linearLayoutTemplateEsercizio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Template Esercizio Denominazione Immagine -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTemplateEsercizioDenominazioneImmagine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <!-- Template Denominazione Immagine -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/denominazione_immagine"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/quale_parole_il_paziente_dovr_indovinare"
                            android:textSize="18sp"
                            />
                        <!-- Parola da indovinare -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:paddingHorizontal="20dp"
                            >
                            <ImageButton
                                android:id="@+id/buttonTemplateDenominazioneImmagineBack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_arrow_back"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                />
                            <TextView
                                android:id="@+id/textViewParoleTemplateDenominazioneImmagine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:text="Gatto"
                                android:textSize="18sp"
                            />
                            <ImageButton
                                android:id="@+id/buttonTemplateDenominazioneImmagineNext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--Template Esercizio Sequenza Parole -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTemplateEsercizioSequenzaParole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <!-- Template Sequenza Parole -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/sequenza_parole"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/quali_sono_le_parole_che_il_paziente_dovr_ripetere"
                            android:textSize="18sp"
                            />
                        <!-- Parola da indovinare -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:paddingHorizontal="20dp"
                            >
                            <ImageButton
                                android:id="@+id/buttonTemplateSequenzaParoleBack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_arrow_back"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                />
                            <!-- Template Sequenza Parole -->
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/textViewParoleTemplateSequenzaParole1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="Gatto"
                                    android:textSize="18sp"
                                    />
                                <TextView
                                    android:id="@+id/textViewParoleTemplateSequenzaParole2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="Cane"
                                    android:textSize="18sp"
                                    />
                                <TextView
                                    android:id="@+id/textViewParoleTemplateSequenzaParole3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:layout_gravity="center"
                                    android:text="Carota"
                                    android:textSize="18sp"
                                    />
                            </LinearLayout>
                            <ImageButton
                                android:id="@+id/buttonTemplateSequenzaParoleNext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!--Template Esercizio Coppia Immagini -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewTemplateEsercizioCoppiaImmagini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:visibility="visible"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <!-- Template Coppia Immagini -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/coppiaImmagini"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/quale_immagine_il_paziente_dovr_associare_all_audio"
                            android:textSize="18sp"
                            />
                        <!-- Parola da indovinare -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:paddingHorizontal="20dp"
                            >
                            <ImageButton
                                android:id="@+id/buttonTemplateCoppiaImmagineBack"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_arrow_back"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                />
                            <ImageView
                                android:id="@+id/templateCoppiaImmagine"
                                android:layout_width="200dp"
                                android:layout_height="200dp"
                                android:src="@drawable/ic_arrow_down_white"
                                />
                            <ImageButton
                                android:id="@+id/buttonTemplateCoppiaImmagineNext"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start|center_vertical"
                                android:background="?attr/selectableItemBackground"
                                android:src="@drawable/ic_arrow_back"
                                android:rotation="180"
                                android:layout_weight="1"
                                android:scaleType="fitStart"
                                />
                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--Creazione esercizio-->
            <LinearLayout
                android:id="@+id/linearLayoutCreazioneEsercizio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                >
                <!-- Esercizio Denominazione Immagine -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewCreazioneEsercizioDenominazioneImmagine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <!-- Esercizio Denominazione Immagine -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/denominazione_immagine"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            />

                        <!-- Immagine Esercizio Denominazione-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="10dp"
                                android:text="@string/immagine_da_indovinare"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/buttonOpenFilePickerImmagineEsercizio"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:src="@drawable/ic_img_choose" />
                        </LinearLayout>


                        <!-- Audio Esercizio Denominazione-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="20dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/registra_audio_di_aiuto"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_marginHorizontal="10dp"
                                />
                            <ImageButton
                                android:id="@+id/buttonOpenFilePickerAudioAiuto"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="File Picker"
                                android:background="@drawable/circle_help_background"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_mic_circle"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                />
                        </LinearLayout>

                        <!-- Risposta Esercizio Denominazione -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            >

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextParoleEsercizi"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/risposta"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- ricompensa esercizio -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp">
                            <!-- TextInputLayout e TextInputEditText per Ricompensa Corretto -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextRicompensaCorrettoDenominazione"
                                    style="@style/TextInputEditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ricompensa_corretto"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- TextInputLayout e TextInputEditText per Ricompensa Errato -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextRicompensaErratoDenominazione"
                                    style="@style/TextInputEditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ricompensa_errato"
                                    android:inputType="number"
                                    />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Esercizio Sequenza parole -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewCreazioneEsercizioSequenzaParole"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <!-- Esercizio Sequenza Parole -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/sequenza_parole"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <!-- Audio Esercizio Sequenza Parole-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="20dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/registra_audio_da_ripetere"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_marginHorizontal="10dp"
                                />
                            <ImageButton
                                android:id="@+id/buttonOpenFilePickerAudioSequenzaParole"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="File Picker"
                                android:background="@drawable/circle_help_background"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_mic_circle"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                />
                        </LinearLayout>

                        <!-- TextInputLayout e TextInputEditText per Parola 1 -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextParola1"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/_1_parola_da_indovinare"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- TextInputLayout e TextInputEditText per Parola 2 -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextParola2"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/_2_parola_da_indovinare"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- TextInputLayout e TextInputEditText per Parola 3 -->
                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/TextInputLayoutStyle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/textInputEditTextParola3"
                                style="@style/TextInputEditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/_3_parola_da_indovinare"
                                android:inputType="text" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- ricompensa esercizio -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp">
                            <!-- TextInputLayout e TextInputEditText per Ricompensa Corretto -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextRicompensaCorrettoSequenzaParole"
                                    style="@style/TextInputEditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ricompensa_corretto"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- TextInputLayout e TextInputEditText per Ricompensa Errato -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextRicompensaErratoSequenzaParole"
                                    style="@style/TextInputEditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ricompensa_errato"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Esercizio Coppia immagini -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardViewCreazioneEsercizioCoppiaImmagini"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="15dp"
                        >
                        <!-- Esercizio Coppia immagini -->
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:text="@string/coppiaImmagini"
                            android:textStyle="bold"
                            android:textSize="20sp" />

                        <!-- Audio Esercizio Coppia immagini-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginVertical="20dp"
                            >

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/registra_audio_immagine"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:textSize="16sp"
                                android:layout_marginHorizontal="10dp"
                                />
                            <ImageButton
                                android:id="@+id/buttonOpenFilePickerAudioCoppiaImmagini"
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:text="File Picker"
                                android:background="@drawable/circle_help_background"
                                android:clipToOutline="true"
                                android:scaleType="centerCrop"
                                android:padding="10dp"
                                android:src="@drawable/ic_mic_circle"
                                android:layout_gravity="center"
                                android:layout_marginEnd="20dp"
                                />
                        </LinearLayout>

                        <!-- Immagine Esercizio Coppia Coretta-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="10dp"
                                android:text="@string/immagine_corretta"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/buttonOpenFilePickerImmagineCoppiaCorretta"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:src="@drawable/ic_img_choose" />
                        </LinearLayout>

                        <!-- Immagine Esercizio Coppia Errata-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginHorizontal="10dp"
                                android:text="@string/immagine_errata"
                                android:textSize="16sp" />

                            <ImageView
                                android:id="@+id/buttonOpenFilePickerImmagineCoppiaErrata"
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:layout_gravity="end"
                                android:layout_weight="1"
                                android:src="@drawable/ic_img_choose" />
                        </LinearLayout>

                        <!-- ricompensa esercizio -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="10dp">
                            <!-- TextInputLayout e TextInputEditText per Ricompensa Corretto -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">

                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextRicompensaCorrettoCoppiaImmagine"
                                    style="@style/TextInputEditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ricompensa_corretto"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>

                            <!-- TextInputLayout e TextInputEditText per Ricompensa Errato -->
                            <com.google.android.material.textfield.TextInputLayout
                                style="@style/TextInputLayoutStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1">


                                <com.google.android.material.textfield.TextInputEditText
                                    android:id="@+id/textInputEditTextRicompensaErratoCoppiaImmagine"
                                    style="@style/TextInputEditTextStyle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:hint="@string/ricompensa_errato"
                                    android:inputType="number" />
                            </com.google.android.material.textfield.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>