<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.fragment.user_paziente.personaggi.PersonaggiFragment"
    android:background="@drawable/background_personaggi_custom"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolBar"
        style="@style/styleToolBar"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        >
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/logoutFragmentContainer"
            android:name="it.uniba.dib.sms2324.num15.PronuntiApp.views.fragment.profilo.LogoutFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/topBarLayout"
        android:name="it.uniba.dib.sms2324.num15.PronuntiApp.views.fragment.user_paziente.TopBarFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/coinsBackground"
        >
        <TextView
            android:id="@+id/textViewPersonaggiSbloccati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personaggi Sbloccati"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPersonaggiSbloccati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/image_view_personaggio"
        android:layout_gravity="center_horizontal">



    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/coinsBackground"
        >
        <TextView
            android:id="@+id/textViewPersonaggiAcquistabili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personaggi Acquistabili"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/white"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPersonaggiAcquistabili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/image_view_personaggio"
        android:layout_gravity="center_horizontal">




    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</androidx.core.widget.NestedScrollView>