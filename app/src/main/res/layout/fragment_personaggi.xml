<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".views.fragment.user_paziente.PersonaggiFragment"
    android:background="@color/backgroundWhite"
    >

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <androidx.appcompat.widget.Toolbar
        android:id="@id/toolBar"
        style="@style/styleToolBar"
        tools:ignore="MissingConstraints"
        android:gravity="center"
        >
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/logoutFragmentContainer"
            android:name="it.uniba.dib.sms2324.num15.PronuntiApp.views.fragment.profilo.LogoutFragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            />
    </androidx.appcompat.widget.Toolbar>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upCoinsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp">
        <TextView
            android:id="@+id/coinsTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="2500"
            android:background="@drawable/rectangle_rounded_border_bkg_coins"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingVertical="2dp"
            android:paddingRight="10dp"
            android:paddingLeft="15dp"
            />
        <ImageView
            android:src="@drawable/ic_coins"
            style="@style/CoinsIconStyle"
            app:layout_constraintBottom_toTopOf="@+id/coinsTextView"
            app:layout_constraintStart_toStartOf="@+id/coinsTextView"
            android:layout_marginBottom="-27dp"
            android:layout_marginStart="-10dp"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewPersonaggiSbloccati"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personaggi Sbloccati"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPersonaggiSbloccati"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/image_view_personaggio"
        android:layout_gravity="center_horizontal">



    </androidx.recyclerview.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textViewPersonaggiAcquistabili"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personaggi Acquistabili"
            android:textSize="20sp"
            android:layout_margin="10dp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@android:color/darker_gray"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPersonaggiAcquistabili"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="3"
        tools:listitem="@layout/image_view_personaggio"
        android:layout_gravity="center_horizontal">




    </androidx.recyclerview.widget.RecyclerView>
</LinearLayout>
</androidx.core.widget.NestedScrollView>