<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llPazienteInListaLogopedista"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:background="@drawable/rectangle_rounded_border_bkg"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="5dp"
    >
        <TextView
            android:id="@+id/textViewNomePaziente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="@dimen/size_text_info_paziente"
            android:text="Nomelungo"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="3"
            />
        <TextView
            android:id="@+id/textViewCognomePaziente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="@dimen/size_text_info_paziente"
            android:text="Cognomelungo"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="3"
            />
        <TextView
            android:id="@+id/textViewEtaPaziente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="@dimen/size_text_info_paziente"
            android:text="12"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:layout_weight="2"
            />
        <TextView
            android:id="@+id/textViewSessoPaziente"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:textSize="@dimen/size_text_info_paziente"
            android:text="M"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:layout_weight="1"
            />
    </LinearLayout>